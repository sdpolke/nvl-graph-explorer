# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# Neo4j Database Configuration (REQUIRED)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Neo4j Connection Pool Settings (Optional)
NEO4J_MAX_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30000

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI Model Settings (Optional)
OPENAI_MODEL=gpt-4.1-mini
OPENAI_MAX_TOKENS=1024

# Rate Limiting Configuration (Optional)
# Window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
# Maximum requests per window per IP (default: 100)
RATE_LIMIT_MAX=100
